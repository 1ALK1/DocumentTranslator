<UserControl x:Class="TranslationAssistant.DocumentTranslationInterface.Content.CustomLanguages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TranslationAssistant.DocumentTranslationInterface.Content"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock Text="Custom Languages" Style="{StaticResource Heading2}" Margin="0,0,0,8" />
        <DataGrid x:Name="CustomLanguageGrid" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="177" Height="100" AlternatingRowBackground="DimGray" Binding.TargetUpdated="CustomLanguageGrid_TargetUpdated" Binding.SourceUpdated="CustomLanguageGrid_SourceUpdated"/>


    </Grid>
</UserControl>
